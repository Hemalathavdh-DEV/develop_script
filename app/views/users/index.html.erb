<html>
<head>
  <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.23/css/jquery.dataTables.min.css">
</head>
<body>
  <%= link_to 'Back', root_path %>
  <%= link_to 'SignUp', sign_up_path %><br>
  <!-- <form action="/action_page.php"> -->
  <label for="sort_by">SortBy</label>
  <select id="items" name="items">
    <option value="recent">Recent Projects</option>
    <option value="category">Category Name</option>
    <option value="username">Username</option>
    <option value="project">Project Title</option>
  </select>
 
<!-- </form> -->
<div class="container">
  <table id="users_list"class="users_list_index display" style="width:100%">
    <thead>
      <tr>
        <th class="ProjectName">ProjectName </th>
        <th> UserName</th>
        <th>CategoryName</th>
      </tr>
    </thead>
    <tbody class="table_body_list">
      <% if @users.present? %>
        <% @users.each do |user| %>
          <tr>
            <td><%= user.products.project_title %></td>
            <td><%= user.user_name %></td>
            <td><%= user.categories.category_name %></td>
          </tr>
        <% end %>
      <% else %>
        <tr><td>No Data found</td></tr>
      <% end %>
    </tbody>
  </table>
</div>
  <script type="text/javascript" charset="utf8" src="https://code.jquery.com/jquery-3.5.1.js"></script>
  <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.23/js/jquery.dataTables.min.js"></script>
  <script>
  $(function(){
    $("#users_list").dataTable({
      "lengthMenu": [2,4,6,8,100]
    });
  })
  $("#items").change(function () {
    var item = $(this).val();
      $.ajax({
      url: "/index",
      method: 'GET',
      data: {
        sortItem: item,
      },
      success: function (data) {
      }
    });
    });
  </script>
</body>
</html>